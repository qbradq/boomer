{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build-dev",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": false 
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build dev preset using cmake --build build/dev",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: build-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build release preset using cmake --build build/release",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
