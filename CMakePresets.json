{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Development Build",
      "description": "Debug build with symbols and no optimizations.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "lint",
      "displayName": "Lint Build",
      "description": "Build with clang-tidy and cppcheck.",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy-20",
        "CMAKE_CXX_CPPCHECK": "cppcheck"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized build for performance.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "lint",
      "configurePreset": "lint"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
  ]
}
